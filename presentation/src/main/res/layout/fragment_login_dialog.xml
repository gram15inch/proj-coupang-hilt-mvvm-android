<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/login_dialog_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이츠 시작하기"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_dialog_sub_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="@string/login_dailog_sub_str"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_dialog_title_txt" />

        <com.google.android.material.button.MaterialButton
            style="@style/MyCoupang.Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/login_dialog_cp_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:text="쿠팡 앱으로 간편 로그인"
            android:backgroundTint="@color/light_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_dialog_sub_txt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_dialog_em_btn"
            style="@style/MyCoupang.Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="쿠팡 아이디(이메일)로 로그인"
            android:textColor="@color/grey919FAC"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_dialog_cp_btn" />

        <TextView
            android:id="@+id/login_dialog_quest_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="25dp"
            android:text="아직회원이 아니신가요?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_dialog_em_btn" />

        <TextView
            android:id="@+id/login_dialog_sign_up_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="회원가입"
            android:textColor="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="@+id/login_dialog_quest_txt"
            app:layout_constraintStart_toEndOf="@+id/login_dialog_quest_txt"
            app:layout_constraintTop_toTopOf="@+id/login_dialog_quest_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>