<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="20dp">

    <data>

        <variable
            name="viewModel"
            type="com.gram15inch.presentation.viewmodel.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cart_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/store_drvy_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cart_toolbar"
            app:tabIndicatorColor="@color/store_devr_tab"
            app:tabIndicatorHeight="2dp"
            app:tabTextAppearance="@style/MyCoupang.cart.tab.textAppearance"
            app:tabTextColor="@color/sc_cart_devr_tab_text">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배달 15-25분"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="63dp" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포장 10-20분" />

        </com.google.android.material.tabs.TabLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/cart_pay_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_drvy_tab_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="20dp">

                    <TextView
                        android:id="@+id/cart_addr_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="집 (으)로배달"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cart_addr_full_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="경기도 용인시 기흥구 상하동 "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/cart_addr_modify_btn"
                        app:layout_constraintStart_toStartOf="@+id/cart_addr_type_txt"
                        app:layout_constraintTop_toBottomOf="@+id/cart_addr_type_txt" />

                    <TextView
                        android:id="@+id/cart_addr_modify_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="수정"
                        android:textColor="@color/store_devr_tab"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dp"
                    android:background="@color/menu_info_div" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/cart_store_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:text="반미362 기흥점"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/menu_info_div"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cart_store_name_txt" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cart_menu_rcy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:subCartMenuList="@{viewModel.cartMenus}" />

                    <TextView
                        android:id="@+id/cart_menu_add_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="25dp"
                        android:text="+ 메뉴추가"
                        android:textColor="@color/store_devr_tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cart_menu_rcy" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8.5dp"
                    android:background="@color/menu_info_div" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/cart_coupone_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="할인쿠폰 / 쿠팡캐시"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_cart_coupon_outline"
                        android:paddingBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/cart_coupone_label"
                        tools:layout_editor_absoluteX="20dp">

                        <TextView
                            android:id="@+id/cart_choice_coupone_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/bg_out_line"
                            android:padding="13dp"
                            android:text="쿠폰을 선택해 주세요"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cart_cash_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bg_out_line"
                            android:padding="13dp"
                            android:text="0원"
                            app:layout_constraintEnd_toStartOf="@+id/cart_cash_all_use_btn"
                            app:layout_constraintStart_toStartOf="@+id/cart_choice_coupone_btn"
                            app:layout_constraintTop_toBottomOf="@+id/cart_choice_coupone_btn" />

                        <TextView
                            android:id="@+id/cart_cash_all_use_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:background="@drawable/bg_cart_out_line"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:text="전액사용"
                            app:layout_constraintBottom_toBottomOf="@+id/cart_cash_txt"
                            app:layout_constraintEnd_toEndOf="@+id/cart_choice_coupone_btn"
                            app:layout_constraintTop_toTopOf="@+id/cart_cash_txt" />

                        <TextView
                            android:id="@+id/cart_cash_balance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="잔여 쿠팡캐시 0원"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/cart_cash_txt"
                            app:layout_constraintTop_toBottomOf="@+id/cart_cash_txt" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/menu_info_div"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                    <TextView
                        android:id="@+id/cart_menu_item_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:text="주문금액"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <TextView
                        android:id="@+id/cart_fee_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="배달비"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/cart_menu_item_total_label"
                        app:layout_constraintTop_toBottomOf="@+id/cart_menu_item_total_label" />

                    <TextView
                        android:id="@+id/cart_menu_item_total_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cart_menu_item_total_label"
                        tools:text="4,400원" />

                    <TextView
                        android:id="@+id/cart_fee_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="+6,500원"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cart_fee_label" />


                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/menu_info_div"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cart_fee_label" />

                    <TextView
                        android:id="@+id/cart_total_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="총 결제금액"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view6" />

                    <TextView
                        android:id="@+id/cart_total_price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cart_total_price_label"
                        tools:text="10,900원" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/menu_info_div" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/cart_msg_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="요청사항"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/cart_fold_ic"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_down"
                        app:tint="@color/store_devr_tab" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cart_msg_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cart_msg_label">

                        <TextView
                            android:id="@+id/cart_msg_to_owner_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="가게 사장님에게"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cart_msg_to_owner_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/bg_cart_msg_outline"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="17dp"
                            android:text="예) 견과류는 빼주세요"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/cart_msg_to_owner_label"
                            app:layout_constraintTop_toBottomOf="@+id/cart_msg_to_owner_label" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cart_one_supply_cb"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:button="@drawable/cb_sign_up"
                            android:scaleX="1.3"
                            android:scaleY="1.3"
                            app:layout_constraintStart_toStartOf="@+id/cart_msg_to_owner_txt"
                            app:layout_constraintTop_toBottomOf="@+id/cart_msg_to_owner_txt" />

                        <TextView
                            android:id="@+id/cart_supply_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:text="일회용 수저/포크 받기"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/cart_one_supply_cb"
                            app:layout_constraintStart_toStartOf="@+id/cart_msg_to_owner_txt"
                            app:layout_constraintTop_toTopOf="@+id/cart_one_supply_cb" />

                        <TextView
                            android:id="@+id/cart_supply_detail_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"
                            android:text="일회용품 사용을 줄이기 위해, 선택 시에만 제공됩니다."
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/cart_supply_label"
                            app:layout_constraintTop_toBottomOf="@+id/cart_supply_label" />

                        <TextView
                            android:id="@+id/cart_msg_to_devr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="배달 기사님에게"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="@+id/cart_msg_to_owner_txt"
                            app:layout_constraintTop_toBottomOf="@+id/cart_supply_detail_label" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cart_msg_drvr_choice_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_cart_msg_outline"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/cart_msg_to_devr"
                            app:layout_constraintTop_toBottomOf="@+id/cart_msg_to_devr" >

                            <TextView
                                android:id="@+id/cart_msg_drvr_choice_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:selectableItemBackground"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="17dp"
                                android:text="@{viewModel.cartDevrMsg}"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/menu_info_div" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/cart_order_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="결제수단"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/cart_order_type_fold_ic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_down"
                        app:tint="@color/store_devr_tab" />

                    <RadioGroup
                        android:id="@+id/cart_order_type_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@+id/cart_order_type_label"
                        app:layout_constraintTop_toBottomOf="@+id/cart_order_type_label">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/cart_coupay_radio_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleX="1.3"
                            android:scaleY="1.3" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/cart_credit_radio_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="68dp"
                            android:checked="true"
                            android:scaleX="1.3"
                            android:scaleY="1.3" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/cart_acount_radio_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="57dp"
                            android:scaleX="1.3"
                            android:scaleY="1.3" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/cart_pay_coupay_balance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="13dp"
                        android:text="쿠페이 머니 (보유 0원)"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/cart_order_type_label"
                        app:layout_constraintTop_toTopOf="@+id/cart_order_type_radio_group"
                        app:layout_goneMarginTop="5dp" />

                    <TextView
                        android:id="@+id/cart_pay_coupay_info_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:text="쿠페이 머니 사용을 위해서는 은행계좌 연결이 필요합니다."
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/cart_pay_coupay_balance_txt"
                        app:layout_constraintTop_toBottomOf="@+id/cart_pay_coupay_balance_txt" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cart_pay_coupay_choice_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_cart_out_line"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="12dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/cart_pay_coupay_balance_txt"
                        app:layout_constraintTop_toBottomOf="@+id/cart_pay_coupay_info_label">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/cart_pay_account_logo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/bg_circle"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
