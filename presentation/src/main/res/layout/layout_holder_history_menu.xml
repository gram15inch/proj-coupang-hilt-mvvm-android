<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/holder_history_menu_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/holder_history_menu_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            tools:text="메뉴 이름"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/holder_history_menu_no_txt"
            app:layout_constraintStart_toEndOf="@id/holder_history_menu_no_txt"
            app:layout_constraintTop_toTopOf="@+id/holder_history_menu_no_txt" />

        <TextView
            android:id="@+id/holder_history_option_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/holder_history_menu_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/holder_history_menu_name_txt"
            tools:text="옵션 이름" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
